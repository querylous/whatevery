<div class="jumbotron">
  <%= image_tag "wp_logo3.png" %> 
  <h1>whatevery</h1>
  <p>A podcast for your nerdy addictions.</p> 
</div>



<div class="container">
  <div class="row">
    <div class="col-sm-10 plmarg">
      <table>
        <tbody>
          <% @post.each do |post| %>
           <tr class="header-title"> 
             <td><h2><%= post.title %></h2></td>
           </tr>
           <tr class="notes">
             <td><%= markdown(post.notes) %></td>
           </tr>
           <tr class="guests">
           <% if post.guests == '' %>
           <% else %>
             <tr class="guests">
               <td><h4 class="postsep">Joining us this week:</h4></td> 
             </tr>
             <tr class="guests"> 
               <td><%= post.guests %></td>
             </tr>
           <% end %>
           <% if post.sponsor == '' %>
           <% else %>
             <tr class="sponsor">
               <td><h4 class="postsep">Brought to you by:</h4></td>
             </tr> 
             <tr class="sponsor">
               <td><%= post.sponsor %></td>
             </tr>
           <% end %>
           <% if user_signed_in? %> 
             <tr><td></td></tr> 
             <tr class="posted">
               <td><b>Posted:&#32</b><%= post.posted %></td></tr>
             <tr class="file_link">
               <td><b>Link:&#32</b><%= post.file_link %></td></tr>
             <tr class="posted_by">
               <td><b>Posted By:&#32</b><%= post.user.firstname %></td></tr>
           <% end %>
           <tr class="postbreak"><td><p></td></tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
