<h1>New Post</h1>
  
  <%= form_for @post, :html => {:class => "form-horizontal"} do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-10"> 
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :notes, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :notes, class: "form-control", rows: 15 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :guests, class: "col-sm-2 control-label" %>
      <div class="col-sm-10"> 
        <%= f.text_area :guests, class: 'form-control', rows: 3 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :sponsor, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :sponsor, class: 'form-control', rows: 3 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :file_link, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :file_link, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :posted, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.check_box :posted %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Create Post", class: "btn btn-default" %>
      </div>
    </div>
  <% end %> 
